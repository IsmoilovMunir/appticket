# ============================================
# Конфигурация базы данных PostgreSQL
# ============================================
# Скопируйте этот файл в .env и настройте под свои нужды
# cp env.example .env

# Имя базы данных
POSTGRES_DB=tickets

# Имя пользователя PostgreSQL (НЕ используйте 'postgres' для безопасности!)
DB_USERNAME=ticket

# Пароль пользователя PostgreSQL (ОБЯЗАТЕЛЬНО измените на надежный пароль!)
DB_PASSWORD=your_secure_password_here

# Порт PostgreSQL (по умолчанию 15432, чтобы не конфликтовать с локальным PostgreSQL)
POSTGRES_PORT=15432

# URL подключения к базе данных (обычно не нужно менять)
DB_URL=jdbc:postgresql://postgres:5432/tickets

# ============================================
# Конфигурация Redis
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
# Пароль для Redis (оставьте пустым, если не нужен)
REDIS_PASSWORD=

# ============================================
# Конфигурация приложения
# ============================================
SERVER_PORT=8080

# JWT секретный ключ (ОБЯЗАТЕЛЬНО измените на случайную строку!)
# Генерация: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_key_here_min_32_chars

# Время жизни JWT токена в секундах (по умолчанию 30 минут)
JWT_TTL_SECONDS=1800

# Пароль администратора по умолчанию (ОБЯЗАТЕЛЬНО измените!)
ADMIN_DEFAULT_PASSWORD=change_me_12345

# ============================================
# Интеграция с Telegram
# ============================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ============================================
# Настройки почты
# ============================================
MAIL_FROM=info@surnekevents.ru

# ============================================
# Рекомендации по безопасности:
# ============================================
# 1. Используйте надежные пароли (минимум 16 символов, буквы, цифры, символы)
# 2. Не используйте 'postgres' как имя пользователя
# 3. Измените JWT_SECRET на случайную строку
# 4. Не коммитьте .env файл в git (он уже в .gitignore)
# 5. Для продакшена используйте переменные окружения сервера

